function emptyArrayOneByOne(array) {
  console.log("The array:  " + array + "\nLet's empty this array one by one:");
    for (let i = 0; i < array.length; i++) {
      let popped = array.pop();
      console.log("    " + (i+1) + ". Popped: " + popped);
  }
};

