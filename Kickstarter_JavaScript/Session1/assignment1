// Version 2

// greetings and rules
const rules = "Hello! \n\nWould you like to play a fun game? \n\nIf you give us your number we will return it multiplied by a random number. \n\nMagic.";
alert(rules);

// Generate a random integer between -20 and 1000
const min = -20;
const max = 1000;
const random = Math.floor(Math.random() * (max - min + 1)) + min;

// ask for number using prompt
const number = prompt(`The random number is ${random}. \nWhat's your number? `);
console.log(`You have chosen number: ${number}`);

// make magic happen
const magicOutcome = number * random;
alert(`Taadaaa: ğŸ”¥ ğŸ”¥ ğŸ”¥  ${magicOutcome} ğŸ”¥ ğŸ”¥ ğŸ”¥`);




